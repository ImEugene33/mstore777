<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<section id="instagram-gallery">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <!-- Instagram posts will be dynamically inserted here -->
        </div>

        <!-- Swiper navigation buttons -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>

        <!-- Swiper pagination -->
        <div class="swiper-pagination"></div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const swiperWrapper = document.querySelector('.swiper-wrapper');
        const accessToken = 'IGQWROaFZAsMXNneEVwc0FzV09jTTNpRjcxYXdlWG9DUWl0RnowcW9pN0xXTl9Vc1BJRDRESlE1Y0ppdThiVmpPOXdoMHRmUmN0T1E2cGQ3U3pqTzV6UDFqMF9hdnRkWkEycTFwT25lZAmxuYjZARTGdlNXZAieVMwUG8ZD'; // Replace with your Instagram access token
        const userId = '17841468917973747'; // Replace with your Instagram user ID

        fetch(`https://graph.instagram.com/${userId}/media?fields=id,caption,media_type,media_url,permalink&access_token=${accessToken}`)
            .then(response => response.json())
            .then(data => {
                // Loop through the media items and build the Swiper slides
                data.data.forEach(post => {
                    console.log('post'. post)
                    if (post.media_type === 'IMAGE' || post.media_type === 'CAROUSEL_ALBUM') {
                        const postElement = `
              <div class="swiper-slide">
                <a href="${post.permalink}" target="_blank">
                  <img src="${post.media_url}" alt="${post.caption}">
                </a>
              </div>`;
                        swiperWrapper.innerHTML += postElement;
                    }
                });

                // Initialize Swiper after content is loaded
                const swiper = new Swiper('.swiper-container', {
                    slidesPerView: 1.5,
                    spaceBetween: 20,
                    loop: true,
                    navigation: {
                        nextEl: '.swiper-button-next',
                        prevEl: '.swiper-button-prev',
                    },
                    pagination: {
                        el: '.swiper-pagination',
                        clickable: true,
                    },
                    breakpoints: {
                        768: {
                            slidesPerView: 3,
                        },
                        480: {
                            slidesPerView: 1,
                        },
                    },
                });
            })
            .catch(err => console.error('Error fetching Instagram posts:', err));
    });
</script>

<style>
    #instagram-gallery {
        padding: 20px;
        background-color: #f9f9f9;
    }

    .swiper-container {
        width: 100%;
        padding: 20px 0;
        overflow: hidden;
    }

    .swiper-slide {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .swiper-slide a {
        display: block;
        height: 100%;
        width: 100%;
        position: relative;
        padding-top: 100%;
    }

    .swiper-slide img {
        max-width: 100%;
        border-radius: 10px;
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        object-fit: cover;
    }

    /* Style Swiper navigation buttons */
    .swiper-button-next, .swiper-button-prev {
        color: #000;
    }

    /* Style Swiper pagination dots */
    .swiper-pagination-bullet {
        background-color: #000;
    }

    @media (max-width: 768px) {
        .swiper-slide {
            width: 50%;
        }
    }

    @media (max-width: 480px) {
        .swiper-slide {
            width: 100%;
        }
    }
</style>

